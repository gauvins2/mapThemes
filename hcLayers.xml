<?xml version="1.0" encoding="UTF-8"?>
<rendertheme
	xmlns="http://mapsforge.org/renderTheme"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://mapsforge.org/renderTheme https://raw.githubusercontent.com/mapsforge/mapsforge/dev/resources/renderTheme.xsd" version="1" locus-extended="1" fill-sea-areas="0" map-background="#ebeade">
	<!-- 
		  gauvins9@gmail.com
      2021-10-28
      v0.5
      ++++++++++++++++++++++++++++++++++++++++++
      High contrast theme with layered rendering
      ++++++++++++++++++++++++++++++++++++++++++

      The user may elect to display the following layers:
        1. Motorways, primary and trunk roads
        2. Secondary roads
        3. Tertiary and unclassified roads
        4. Cycling routes
        5. Hiking routes
        6. Footpaths and trails
   
       xcXpress displays all layers by default.

       Color gradient:
        . #ffffff white
        . #E8E8E8 
        . #DCDCDC gainsboro (color name is not recognized)
        . #D3D3D3 lightgray 
        . #C0C0C0 silver
        . #A9A9A9 darkgray
        . #808080 gray
        . #696969 dimgray
        . #383838
        . #000000 black

      Based on : LOCUS INTERNAL THEME FOR LOMAPS (https://docs.locusmap.eu/doku.php?id=manual:advanced:map_tools:theming)
      Release July, 2016
      Distributed under the Apache License
      version 2.1.1
      ___________________

      TODO (see in relevant section)

		  -->
  <!-- ===================================================== -->
  <!-- DEFINE THE LAYERS MENU                                -->
  <!-- ===================================================== -->

  <stylemenu id="vol-menu" defaultvalue="vol-multi" defaultlang="en">
    <layer id="major_roads" enabled="true">
      <name lang="en" value="major roads"/>
      <cat id="major_roads"/>
    </layer>
    <layer id="secondary_roads" enabled="true">
      <name lang="en" value="secondary roads"/>
      <cat id="secondary_roads"/>
    </layer>
    <layer id="minor_roads" enabled="true">
      <name lang="en" value="minor roads"/>
      <cat id="minor_roads"/>
    </layer>
    <layer id="tracks_and_paths" enabled="false">
      <name lang="en" value="tracks and paths"/>
      <cat id="tracks_and_paths"/>
    </layer>
    <layer id="cycling_routes" enabled="true">
      <name lang="en" value="cycling routes"/>
      <cat id="cycling_routes"/>
    </layer>
    <layer id="hiking_routes" enabled="true">
      <name lang="en" value="hiking routes"/>
      <cat id="hiking_routes"/>
    </layer>
    <layer id="rail" enabled="true">
      <name lang="en" value="Rail"/>
      <cat id="rail"/>
    </layer>
    <layer id="names" enabled="true">
      <name lang="en" value="Place names"/>
      <cat id="names"/>
    </layer>
    <layer id="vol-hiking" visible="true">
      <name lang="en" value="Hiking and Wintersport"/>
      <overlay id="major_roads"/>
      <overlay id="secondary_roads"/>
      <overlay id="minor_roads"/>
      <overlay id="rail"/>
      <overlay id="cycling_routes"/>
      <overlay id="hiking_routes"/>
      <overlay id="tracks_and_paths"/>
      <overlay id="names"/>
    </layer>
  </stylemenu>   
    
  <!-- ===================================================== -->
  <!-- BASIC FEATURES - land, sea, water                     -->
  <!-- ===================================================== -->

	<!--  GLOBE SURFACE -->
    <!--   open water  -->
    <rule e="way" k="natural" v="sea">
      <area fill="#DCDCDC"/>
    </rule>
    <rule e="way" k="natural" v="nosea">
      <area fill="white"/>
    </rule>
    <!--   land  -->
    <rule e="way" k="landuse|wood|lm_landuse" v="*" closed="yes">
      <area fill="white"/>
    </rule>
    <!--   inland water  -->
    <rule e="way" k="landuse|natural" v="reservoir|basin|water" zoom-min="8">
      <area fill="#DCDCDC"/>
    </rule>

  <!-- ===================================================== -->
  <!-- DEFINE WAYS - boundaries, elevation, roads/paths, rail-->
  <!-- ===================================================== -->

  <!-- ADMINISTRATIVE BOUNDARIES -->
    <!--   States/provinces -->
    <rule e="way" k="admin_level" v="*">
      <rule e="way" k="admin_level" v="4" zoom-max="14">
        <line stroke="black" stroke-width="1dp" />
      </rule>
    <!--   Countries  -->
      <rule e="way" k="admin_level" v="2" zoom-max="16">
        <line stroke="black" stroke-width="2dp" />
      </rule>
    </rule>

  <!-- ELEVATION -->
    <rule e="way" k="contour_ext" v="*">
      <!--   contour lines level 13   -->
      <rule e="way" k="contour_ext" v="*" zoom-min="13" zoom-max="13">
        <rule e="way" k="contour_ext" v="elevation_medium|elevation_major">
          <line stroke="gray" stroke-width="0.25dp"/>
        </rule>
      </rule>
      <!--   contour lines level 14  -->
      <rule e="way" k="contour_ext" v="*" zoom-min="14" zoom-max="14">
        <rule e="way" k="contour_ext" v="elevation_minor">
          <line stroke="gray" stroke-width="0.09dp" curve="cubic"/>
        </rule>
        <rule e="way" k="contour_ext" v="elevation_medium|elevation_major">
          <line stroke="gray" stroke-width="0.18dp" curve="cubic"/>
        </rule>
      </rule>
      <!--   contour lines level 15  -->
      <rule e="way" k="contour_ext" v="*" zoom-min="15" zoom-max="16">
        <rule e="way" k="contour_ext" v="elevation_minor">
          <line stroke="gray" stroke-width="0.08dp" curve="cubic"/>
        </rule>
        <rule e="way" k="contour_ext" v="elevation_medium|elevation_major">
          <line stroke="gray" stroke-width="0.15dp" curve="cubic"/>
          <rule e="way" k="*" v="*">
            <pathText k="ele" font-style="bold" font-size="5dp" scale-font-size="15,1.2" fill="#7C583A" stroke="#ffffff" stroke-width="1.5dp" rotate_up="false"/>
          </rule>
        </rule>
      </rule>
      <!--   contour lines level 17 and above   -->
      <rule e="way" k="contour_ext" v="*" zoom-min="17">
        <rule e="way" k="contour_ext" v="elevation_minor">
          <line stroke="gray" stroke-width="0.05dp" curve="cubic"/>
        </rule>
        <rule e="way" k="contour_ext" v="elevation_medium|elevation_major">
          <line stroke="gray" stroke-width="0.10dp" curve="cubic"/>
          <rule e="way" k="*" v="*">
            <pathText k="ele" dy="3dp" font-style="bold" font-size="7dp" fill="#7C583A" dx="30" scale-font-size="16,1.2" stroke="#ffffff" stroke-width="2dp" rotate_up="false"/>
          </rule>
        </rule>
      </rule>
    </rule>

   <!-- PLACE NAMES -->
    <rule cat="names" e="any" k="place" v="*">
      <rule e="any" k="place" v="town" zoom-min="10" zoom-max="10">
        <rule e="any" k="*" v="*" zoom-min="10" zoom-max="10">
          <circle r="3dp" fill="white" stroke="#9B9B9B" stroke-width="1dp"/>
          <circle r="1.1dp" stroke="#9B9B9B" stroke-width="1dp"/>
        </rule>
        <rule e="any" k="*" v="*" zoom-min="11" zoom-max="11">
          <circle r="4dp" fill="white" stroke="#9B9B9B" stroke-width="1dp"/>
          <circle r="1.6dp" stroke="#9B9B9B" stroke-width="1dp"/>
        </rule>
      </rule>

      <rule e="any" k="place" v="city" zoom-min="9" zoom-max="11">
        <rule e="any" k="*" v="*" zoom-min="6" zoom-max="9">
          <circle r="2dp" fill="#D3D3D3" stroke="darkGray" stroke-width="1"/>
        </rule>
        <rule e="any" k="*" v="*" zoom-min="10" zoom-max="10">
          <circle r="4dp" fill="white" stroke="darkGray" stroke-width="1dp"/>
          <circle r="1.8dp" fill="darkGray"/>
        </rule>
      </rule>

      <rule e="any" k="place" v="locality" zoom-min="16" country="*|!ES">
        <caption k="name" font-size="12dp" scale-font-size="17,1.2" fill="#000000" stroke="#ffffff" stroke-width="2.5dp"/>
      </rule>

      <rule e="any" k="place" v="hamlet" zoom-min="13" zoom-max="17">
        <rule e="any" k="*" v="*" zoom-min="13" zoom-max="13">
          <caption k="name" font-family="default" font-size="10dp" scale-font-size="13,1.2" fill="#000000" stroke="#ffffff" stroke-width="2dp"/>
        </rule>
        <rule e="any" k="*" v="*" zoom-min="14" zoom-max="17">
          <caption k="name" font-family="default" font-style="bold" font-size="10dp" scale-font-size="13,1.2" fill="#000000" stroke="#ffffff" stroke-width="2.5dp"/>
        </rule>
      </rule>
      
      <rule e="any" k="place" v="village" zoom-min="12" zoom-max="17">
        <rule e="any" k="*" v="*" zoom-min="11" zoom-max="12">
          <caption k="name" font-family="default" font-size="9dp" scale-font-size="11,1.2" fill="#000000" stroke="#ffffff" stroke-width="2dp"/>
        </rule>
        <rule e="any" k="*" v="*" zoom-min="13" zoom-max="17">
          <caption k="name" font-family="default" font-style="bold" font-size="12dp" scale-font-size="13,1.2" fill="#000000" stroke="#ffffff" stroke-width="2.5dp"/>
        </rule>
      </rule>
      
      <rule e="any" k="place" v="suburb" zoom-min="14" zoom-max="17">
        <caption k="name" upper-case="true" font-size="12dp" scale-font-size="14,1.2" fill="#343434" stroke="#f8f3f3" stroke-width="2dp"/>
      </rule>
      
      <rule e="any" k="place" v="town" zoom-min="9" zoom-max="15">
        <rule e="any" k="*" v="*" zoom-min="9" zoom-max="11">
          <caption k="name" dy="12dp" scale-dy-size="9,1.2" font-family="sans_serif" font-style="bold" font-size="11dp" scale-font-size="10,1.2" fill="#000000" stroke="#ffffff" stroke-width="2.8dp"/>
        </rule>
        <rule e="any" k="*" v="*" zoom-min="12" zoom-max="15">
          <caption k="name" font-family="sans_serif" font-style="bold" font-size="13dp" scale-font-size="12,1.2" fill="#000000" stroke="#ffffff" stroke-width="3dp"/>
        </rule>
      </rule>
      
      <rule e="any" k="place" v="city" zoom-max="13">
        <rule e="any" k="place" v="city" zoom-max="10">
          <caption k="name" dy="15dp" scale-dy-size="9,1.15" upper-case="true" font-family="sans_serif" font-style="bold" font-size="9dp" scale-font-size="6,1.15" fill="#000000" stroke="#ffffff" stroke-width="3dp"/>
        </rule>
        <rule e="any" k="place" v="city" zoom-min="11" zoom-max="14">
          <caption k="name" dy="15dp" scale-dy-size="11,1.15" font-family="sans_serif" font-style="bold" font-size="15dp" scale-font-size="11,1.15" fill="#000000" stroke="#ffffff" stroke-width="3dp"/>
        </rule>
      </rule>
      
      <rule e="any" k="place" v="island" zoom-min="9" zoom-max="15">
        <caption k="name" font-style="bold" font-size="12" scale-font-size="9,1.2" fill="#000000" stroke="#ffffff" stroke-width="3.0"/>
      </rule>
      
      <rule e="any" k="place" v="country" zoom-max="6">
        <caption k="name" upper-case="true" font-style="bold" font-size="25" fill="#000000" stroke="#ffffff" stroke-width="2.0"/>
      </rule>
    </rule>

  <!-- ROADS, ROUTES, POWER LINES & STREETS -->
  <!-- Streets (are displayed at zoom-min="16") (first way rendered) -->
      <rule e="way" k="highway" v="residential" zoom-min="16">
          <line stroke="black" stroke-width="1.50dp" />
          <line stroke="white" stroke-width="1.10dp" stroke-linecap="butt"/>
      </rule>
  <!-- Roads -->
    <rule e="way" k="highway" v="motorway|trunk|primary|secondary|tertiary|unclassified|road|track|path|motorway_link|primary_link|secondary_link|tertiary_link|trunk_link">
      <rule cat="major_roads" e="way" k="highway" v="motorway|trunk|primary|motorway_link|trunk_link|primary_link">
          <line stroke="black" stroke-width="5.5dp" curve="cubic" stroke-linecap="butt"/>
          <line stroke="#808080" stroke-width="4dp" curve="cubic" stroke-linecap="butt"/>
          <!-- draw a median for motorways -->
          <rule e="way" k="highway" v="motorway|motorway_link">
              <line stroke="white" stroke-width=".5dp" curve="cubic" stroke-linecap="butt"/>
          </rule>
      </rule>
      <rule cat="secondary_roads" e="way" k="highway" v="secondary">
          <line stroke="black" stroke-width="3dp" curve="cubic" stroke-linecap="butt"/>
          <line stroke="#808080" stroke-width="2dp" curve="cubic" stroke-linecap="butt"/>
      </rule>
      <rule cat="minor_roads" e="way" k="highway" v="tertiary">
          <line stroke="black" stroke-width="1.50dp" />
          <line stroke="white" stroke-width="1.10dp" stroke-linecap="butt"/>
      </rule>
      <rule cat="minor_roads" e="way" k="highway" v="unclassified|road">
          <line stroke="black" stroke-width="1.50dp" stroke-dasharray="5,5" stroke-linecap="butt"/>
          <line stroke="white" stroke-width="1.10dp" stroke-linecap="butt"/>
      </rule>
      <rule cat="tracks_and_paths" e="way" k="highway" v="track">
          <line stroke="black" stroke-width="1dp" stroke-dasharray="10,10" curve="cubic" stroke-linecap="butt"/>
      </rule>
      <rule cat="tracks_and_paths" e="way" k="highway" v="path" >
          <line stroke="black" stroke-width="1" stroke-dasharray="5,5"/>
      </rule>
    </rule> 
  <!-- Footpaths (display at large scale) -->
    <rule e="way" k="highway" v="footway" zoom-min="16">
        <line stroke="black" stroke-width="1" stroke-dasharray="1,5"/>
    </rule>
  <!-- Routes -->
    <rule e="way" k="cycleway|route" v="*">
      <rule cat="cycling_routes" e="way" k="cycleway" v="*">
          <line stroke="black" stroke-width="2dp" dy="2.5p"  curve="cubic"/>
          <line stroke="white" stroke-width="1.5dp" dy="2.5p" stroke-dasharray="5,10" curve="cubic"/>
      </rule>
      <rule cat="cycling_routes" e="way" k="route" v="bicycle">
          <line stroke="black" stroke-width="2dp" dy="2.5p"  curve="cubic"/>
          <line stroke="white" stroke-width="1.5dp" dy="2.5p" stroke-dasharray="5,10" curve="cubic"/>
      </rule>
      <rule cat="hiking_routes" e="way" k="route" v="hiking|foot|mtb|ski|piste">
          <line stroke="black" stroke-width="1dp" stroke-dasharray="1,5"/>
      </rule>
    </rule>
  <!-- Railoads -->
  <rule cat="rail" e="way" k="railway" v="rail" >
    <line stroke="black" stroke-width="4dp" stroke-linecap="butt"/>
    <line stroke="white" stroke-width="4dp" stroke-dasharray="5,1" stroke-linecap="butt"/>
    <line stroke="black" stroke-width="0.6dp" stroke-linecap="butt"/>
  </rule>
  <!-- Ferry -->
  <rule e="way" k="route" v="ferry">
    <line stroke="black" stroke-width="1dp" stroke-dasharray="12,12" stroke-linecap="butt"/>
  </rule>
  <!-- Power lines -->
    <rule e="way" k="power" v="line" zoom-min="14">
      <line stroke="#707070" stroke-width="0.5dp" stroke-dasharray="10,3,1,3"/>
    </rule>

  <!-- Road/street names -->
    <rule e="way" k="highway" v="pedestrian|service|residential|living_street|construction|road|ford|unclassified|tertiary_link|secondary_link|primary_link|trunk_link|motorway_link|tertiary" zoom-min="17">
      <rule e="way" k="*" v="*" zoom-max="18">
        <pathText k="name" font-style="bold" font-size="8dp" scale-font-size="16,1.15" fill="#000000" stroke="#C0FFFFFF" stroke-width="2dp" dx="6dp" dy="2.5dp"/>
      </rule>
      <rule e="way" k="*" v="*" zoom-min="19" zoom-max="20">
        <pathText k="name" font-style="bold" font-size="10dp" scale-font-size="16,1.15" fill="#000000" stroke="#A0FFFFFF" stroke-width="2dp" dx="12dp" dy="4.2dp"/>
      </rule>
      <rule e="way" k="*" v="*" zoom-min="21">
        <pathText k="name" font-style="bold" font-size="12dp" scale-font-size="16,1.15" fill="#000000" stroke="#80FFFFFF" stroke-width="2dp" dx="18dp" dy="6.5dp"/>
      </rule>
    </rule>
    <rule e="way" k="highway" v="primary|trunk|motorway" zoom-min="17">
      <rule e="way" k="*" v="*" >
        <pathText k="name" font-style="bold" font-size="16dp" scale-font-size="16,1.15" fill="white" stroke="black" stroke-width="2dp" dx="4dp" dy="6dp"/>
      </rule>
    </rule>
    <rule e="way" k="highway" v="secondary" zoom-min="17">
      <rule e="way" k="*" v="*" >
        <pathText k="name" font-style="bold" font-size="12dp" scale-font-size="16,1.15" fill="white" stroke="black" stroke-width="2dp" dx="4dp" dy="6dp"/>
      </rule>
    </rule>

    <rule cat="tracks" e="way" k="highway" v="track|byway" zoom-min="17">
      <rule e="way" k="*" v="*" zoom-max="18">
        <pathText k="name" font-style="bold" font-size="6dp" scale-font-size="16,1.15" fill="#000000" stroke="#C0FFFFFF" stroke-width="2dp" dx="6dp" dy="2.5dp"/>
      </rule>
      <rule e="way" k="*" v="*" zoom-min="19" zoom-max="20">
        <pathText k="name" font-style="bold" font-size="8dp" scale-font-size="16,1.15" fill="#000000" stroke="#A0FFFFFF" stroke-width="2dp" dx="12dp" dy="4.2dp"/>
      </rule>
      <rule e="way" k="*" v="*" zoom-min="21">
        <pathText k="name" font-style="bold" font-size="9dp" scale-font-size="16,1.15" fill="#000000" stroke="#80FFFFFF" stroke-width="2dp" dx="18dp" dy="6.5dp"/>
      </rule>
    </rule>

    <rule cat="paths" e="way" k="highway" v="footway|path|bridleway|cycleway|steps" zoom-min="17">
      <rule e="way" k="*" v="*" zoom-max="18">
        <pathText k="name" font-style="normal" font-size="6dp" scale-font-size="16,1.15" fill="#000000" stroke="#C0FFFFFF" stroke-width="4dp" dx="6dp" dy="2.5dp"/>
      </rule>
      <rule e="way" k="*" v="*" zoom-min="19" zoom-max="20">
        <pathText k="name" font-style="normal" font-size="8dp" scale-font-size="16,1.15" fill="#000000" stroke="#A0FFFFFF" stroke-width="4dp" dx="12dp" dy="4.2dp"/>
      </rule>
      <rule e="way" k="*" v="*" zoom-min="21">
        <pathText k="name" font-style="normal" font-size="9dp" scale-font-size="16,1.15" fill="#000000" stroke="#80FFFFFF" stroke-width="4dp" dx="18dp" dy="6.5dp"/>
      </rule>
    </rule>

  <!-- POIs -->
    <!-- Persistent icons: campsites/caravan/shelter + airport -->
      <rule e="any" k="tourism" v="camp_site">
        <symbol src="file:/symbols/tent.svg" symbol-height="16dp" scale-icon-size="16,0.25"/>
      </rule>
      <rule e="any" k="tourism" v="caravan_site">
        <symbol src="file:/symbols/caravan.svg"  symbol-width="16dp" scale-icon-size="16,1.50"/>
      </rule>
      <rule e="any" k="amenity" v="shelter">
        <symbol src="file:/symbols/shelter.svg"  symbol-width="16dp" scale-icon-size="16,1.50"/>
      </rule>
      <rule e="any" k="aeroway" v="aerodrome|airport">
        <symbol src="file:/symbols/airport.svg"  symbol-width="16dp" scale-icon-size="16,1.50"/>
      </rule>
      <rule cat="rail" e="any" k="building" v="train_station">
        <symbol src="file:/symbols/trainstation.svg"  symbol-width="16dp" scale-icon-size="16,1.50"/>
      </rule>
    <!-- Other POIs at zoom 16 or more -->
      <rule e="any" k="tourism|amenity|shop|" v="*" zoom-min="17">
        <rule e="any" k="*" v="cafe">
          <symbol src="file:/symbols/cafe.svg" symbol-width="16dp" />
        </rule>
        <rule e="any" k="*" v="convenience">
          <symbol src="file:/symbols/convenience.svg" symbol-width="16dp" />
        </rule>
        <rule e="any" k="*" v="drinking_water">
          <symbol src="file:/symbols/drinking_water.svg" symbol-width="16dp" />
        </rule>
        <rule e="any" k="*" v="fuel">
          <symbol src="file:/symbols/fuel.svg" symbol-width="16dp" />
        </rule>
        <rule e="any" k="*" v="hotel">
          <symbol src="file:/symbols/hotel.svg" symbol-width="16dp" />
        </rule>
        <rule e="any" k="*" v="laundry">
          <symbol src="file:/symbols/laundry.svg" symbol-width="16dp" />
        </rule>
        <rule e="any" k="*" v="picnic_site|picnic_table">
          <symbol src="file:/symbols/picnic.svg" symbol-width="16dp" />
        </rule>
        <rule e="any" k="*" v="supermarket">
          <symbol src="file:/symbols/supermarket.svg" symbol-width="16dp" />
        </rule>
        <rule e="any" k="*" v="restaurant">
          <symbol src="file:/symbols/restaurant.svg" symbol-width="16dp" />
        </rule>
        <rule e="any" k="*" v="toilets">
          <symbol src="file:/symbols/toilets.svg" symbol-width="16dp" />
        </rule>
      </rule>
</rendertheme>

